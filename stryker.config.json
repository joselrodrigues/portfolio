{
  "testRunner": "vitest",
  "mutate": [
    "{src,lib}/**/!(*.+(s|S)pec|*.+(t|T)est).+(cjs|mjs|js|ts|mts|cts|jsx|tsx|html|vue|svelte)",
    "!{src,lib}/**/__tests__/**/*.+(cjs|mjs|js|ts|mts|cts|jsx|tsx|html|vue|svelte)",
    "!src/{components,i18n}/**/*.+(tsx|ts)"
  ],
  "vitest": {
    "configFile": "vitest.config.ts"
  }
}
